<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gesture_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:keepScreenOn="true"
    tools:context="com.lenovo.way.newgesturetest.MainActivity">

    <!--android:keepScreenOn="true"-->

    <LinearLayout
        android:id="@+id/LinearLayout_Img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_depth"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@color/colorPrimary" />

        <ImageView
            android:id="@+id/iv_ir"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:src="@color/colorAccent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="13dp">
        />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fps"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_exposure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exp"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Range"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_eventcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_finger_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finger"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_set_fps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set_Fps"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_set_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set_Exp"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_set_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set_Range"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/bt_startimg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start Img"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_bg_off"
                    android:layout_margin="6dp"/>

                <Button
                    android:id="@+id/bt_stopimg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stop Img"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_bg_off"
                    android:layout_margin="6dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_startinfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start Info"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_bg_off"
                    android:layout_margin="6dp"/>

                <Button
                    android:id="@+id/bt_stopinfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stop Info"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_bg_off"
                    android:layout_margin="6dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_saveimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="startSaveImage"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_bg_off"
                    android:layout_margin="6dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_start_dump"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start Dump"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_bg_off"
                    android:layout_margin="6dp"/>

                <Button
                    android:id="@+id/bt_stop_dump"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stop Dump"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_bg_off"
                    android:layout_margin="6dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="13dp">

        <EditText
            android:id="@+id/et_fps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="fps(0-30正整数)"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_setfps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set fps"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/et_exposure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="exposuretime(0-1500正整数)"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/bt_setexposure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set exposure"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/et_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="switch(0或1)"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/bt_setSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set switch"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_get_setInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="getSetInfo"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="13dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_click1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_toEndOf="@+id/tv_click"
                android:src="@mipmap/click1" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/iv_click1"
                android:src="@mipmap/click2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_back1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_toEndOf="@+id/tv_back"
                android:src="@mipmap/back1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_toEndOf="@+id/iv_back1"
                android:src="@mipmap/back2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_close_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_stop"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
